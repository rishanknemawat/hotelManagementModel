<%- include('partials/header') %>
    <form action="/bookings/<%= booking._id %>?_method=PUT" method="POST" >
        <div>
            <p>From</p>
            <input type="date" name='updatedBooking[from]' value="<%= booking.from %>">
        </div>
        <div>
            <p>To</p>
            <input type="date" name='updatedBooking[to]' value="<%= booking.to %>">
        </div>
        <div>
            <p>Adults</p>
            <input type="number" name='updatedBooking[adults]' value="<%= booking.adults %>">
        </div>
        <div>
            <p>Children</p>
            <input type="number" name='updatedBooking[children]' value="<%= booking.children %>">
        </div>
        <div>
            <p>No. Of Rooms</p>
            <input type="number" name='updatedBooking[rooms]' value="<%= booking.rooms %>">
        </div>
        <div>
            <p>Room</p>
            <input type="text" name='updatedBooking[roomtype]' value="<%= booking.roomtype %>">
        </div>
        <button type="submit">Edit</button>
    </form>
<%- include('partials/footer') %>